# Configuration du serveur
NODE_ENV=development
PORT=3000
HOST=localhost

# Configuration de la base de données MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=uca_booking

# Configuration JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Configuration Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Domaines autorisés pour l'authentification
ALLOWED_DOMAINS=@uca.ma,@uca.ac.ma

# Configuration Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=booking@uca.ma
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=UCA Booking <booking@uca.ma>

# Configuration CORS
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration des réservations
MAX_RESERVATIONS_PER_USER=5
MAX_DURATION_DAYS=7
CANCELLATION_DEADLINE_HOURS=12
AUTO_APPROVE_SINGLE_DAY=true

# Logs
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# URLs Frontend (pour les emails)
FRONTEND_URL=http://localhost:5173
FRONTEND_RESERVATION_URL=http://localhost:5173/mes-reservations

# Configuration administrateur par défaut
ADMIN_EMAIL=admin@uca.ma